<div class="d-flex justify-content-between align-items-center">
  <div class="p-2">
    <h1>Location Report</h1>
  </div>
  <div class="p-2">
    <%= link_to "This Month", location_report_url(start_date: Time.zone.today.at_beginning_of_month, end_date: Time.zone.today.at_end_of_month), class: 'btn btn-primary text-white btn-sm' %>
    <%= link_to "Last Month", location_report_url(start_date: (Time.zone.today - 1.month).at_beginning_of_month, end_date: (Time.zone.today - 1.month).at_end_of_month), class: 'btn btn-primary text-white btn-sm' %>
    <%= link_to "This Year", location_report_url(start_date: Time.zone.today.at_beginning_of_year, end_date: Time.zone.today.at_end_of_year), class: 'btn btn-primary text-white btn-sm' %>
    <%= link_to "Last Year", location_report_url(start_date: (Time.zone.today - 1.year).at_beginning_of_year, end_date: (Time.zone.today - 1.year).at_end_of_year), class: 'btn btn-primary text-white btn-sm' %>
    <button type="button" class="btn btn-primary btn-sm text-white" data-toggle="modal" data-target="#exampleModal">
      Custom
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Custom Date Filtering</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%= simple_form_for :months, url: location_report_url, method: :get do |f| %>
            <div class="modal-body">
              <%= f.input :start_date, as: :date, class: 'dropdown-item' %>
              <%= f.input :end_date, as: :date, class: 'dropdown-item' %>
            </div>
            <div class="modal-footer">
              <%= f.submit "Submit", class:'btn btn-success btn-sm text-white' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMonths">

    </div>


  </div>
</div>
<%= render 'location_report_table' %>
